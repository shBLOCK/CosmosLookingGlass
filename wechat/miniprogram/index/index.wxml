<canvas type="webgl2"
        id="glCanvas"
        style="width: 100%; height: 100%;"
        catch:pointermove="handlePointerMove"
        catch:pointerdown="handlePointerDown"
        catch:pointerup="handlePointerUp"
        catch:touchstart="handleTouchStart"
        catch:touchmove="handleTouchMove"
        catch:touchcancel="handleTouchCancel"
        catch:touchend="handleTouchEnd"
        catch:wheel="handleWheel"
        disable-scroll="true"></canvas>
<canvas type="2d" id="tmp2dCanvas" style="position: absolute; top: 0; left: 0; z-index: -100;"></canvas>